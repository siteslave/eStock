extends ../layouts/Main

block scripts
    script(src="ConnectionController.js")

block content
    .fs-display-1
        i.icon.icon--green.icon--circled.icon--l.mdi.mdi--settings-ethernet
        | &nbsp;Connection setting
    br
    form(name="frmConnection", ng-controller="ConnectionController")
        .fs-subhead
            i.mdi.mdi--desktop-mac
            | &nbsp;Database information
        .grid
            .grid__col6
                lx-text-field(label="Server address")
                    input(type="text", ng-model="config.db.host", ng-required="true")
            .grid__col2
                lx-text-field(label="Port")
                    input(type="number", ng-model="config.db.port", ng-required="true")
            .grid__col4
                lx-text-field(label="Database name")
                    input(type="text", ng-model="config.db.database", ng-required="true")
        .grid
            .grid__col6
                lx-text-field(label="Username")
                    input(type="text", ng-model="config.db.user", ng-required="true")    
            .grid__col6
                lx-text-field(label="Password")
                    input(type="password", ng-model="config.db.password", ng-required="true")
        br
        .fs-subhead
            i.mdi.mdi--cloud-done
            | &nbsp;Datacenter information
        .grid
            .grid__col6
                lx-text-field(label="Datacenter url")
                    input(type="text", ng-model="config.dc.url", ng-required="true")
        
            .grid__col6
                lx-text-field(label="Private key")
                    input(type="text", ng-model="config.dc.private_key", ng-required="true")
                        
        .grid
            .grid__col4
                br
                button(ng-disabled="frmConnection.$invalid", ng-click="doSaveConnection()").btn.btn--l.btn--green.btn--raised
                    | Save
                | &nbsp;
                a(href="../pages/Index.html").btn.btn--l.btn--red.btn--raised
                    | Cancel
                    
